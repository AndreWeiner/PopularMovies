<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_review_text"
    android:layout_marginStart="@dimen/margin_review_text"
    android:orientation="vertical">


    <TextView
        android:id="@+id/reviewerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_review_text"
        android:text="@string/dummy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sep_height"
        android:layout_marginBottom="@dimen/margin_poster"
        android:layout_marginTop="@dimen/margin_poster"
        android:background="@color/colorPrimary" />

</LinearLayout>